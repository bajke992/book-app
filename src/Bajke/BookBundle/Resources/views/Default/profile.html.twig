{% extends 'BookBundle::layout.html.twig' %}
{% block title %} User profile {% endblock %}

{% block body %}
    <div class="row">
        <a class="btn btn-success" href="{{ path('create_client') }}">Create new Client</a>
    </div>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Client ID</th>
            <th>Client Secret</th>
            <th>Actions</th>
        </tr>
        </thead>
        {% for client in clients %}
            <tr>
                <td>{{ client.getId() }}</td>
                <td>{{ client.getPublicId() }}</td>
                <td>{{ client.secret }}</td>
                <td>
                    <a class="btn btn-danger btn-xs" href="/profile/delete?id={{ client.getId() }}"><span class="glyphicon glyphicon-remove"></span></a>
                    <a class="btn btn-danger btn-xs" href="/profile/delete?id={{ client.getId() }}"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}