{% extends 'BookBundle::layout.html.twig' %}

{% block title %} Login {% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal col-lg-4 col-md-4 col-sm-6 col-xs-10 pull-center">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label class="control-label" for="username">Username: </label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label class="control-label" for="password">Password: </label>
                <input class="form-control" type="password" id="password" name="_password" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label class="control-label" for="remember_me">Remember me</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="Login" />
            </div>
        </div>
    </form>

    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-10 pull-center">
        <div style="text-align: center; margin-bottom: 10px;">
            <strong>- OR -</strong>
        </div>
        <a class="btn btn-danger col-lg-10 col-md-10 col-sm-10 col-xs-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1" href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}" >
            <strong>Google</strong>
        </a>
    </div>
{% endblock body %}